<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrolView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/vwName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="팀 이름"
                android:singleLine="true"
                android:text="불타는 고무다라이"
                android:textColorHint="#888888"
                android:textSize="24sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvHintCont"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="컨텐츠"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                    <TextView
                        android:id="@+id/tvCont"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="아재개그"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvHintCont2"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="활동 지역"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                    <TextView
                        android:id="@+id/tvCont2"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="감천초등학교 뒤뜰"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvHintCont3"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|top"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="소개글"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                    <TextView
                        android:id="@+id/tvCont3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:text="아재개그 개잘합니다 맡겨만 주십쇼아재개그 개잘합니다 맡겨만 주십쇼"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>